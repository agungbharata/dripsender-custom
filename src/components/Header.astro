---
import Toggle from "../ui/ThemeChange.astro";
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems, DropdownSubmenu } from "astro-navbar";
import Logo from "../../public/assets/images/logomark.svg";
---

<section class="w-full bg-slate-50 dark:bg-slate-900 py-6 lg:px-0 px-4 sticky top-0 z-50 border-b-2 border-gray-100 dark:border-gray-800">
  <header class="lg:flex justify-between gap-5 mx-auto max-w-7xl">
    <Astronav closeOnClick>
      <div class="flex w-full lg:w-auto justify-between">
        <a class="block text-teal-600" href="/">
          <span class="sr-only">Home</span>
          <img src={Logo.src} width="40px" height="auto" alt="Logo Dripsender" />
        </a>
      </div>
    </Astronav>
    <div class="gap-2 lg:flex hidden">
      <div class="gap-2 lg:flex flex mx-auto p-2 rounded-full bg-gray-200 dark:bg-cyan-400 items-center"><Toggle /></div>
    </div>
  </header>
</section>
